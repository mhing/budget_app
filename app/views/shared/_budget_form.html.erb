<%= form_for(@budget) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :name %>
	<%= f.text_field :name, :value=>(@budget.name), class: "center-text-field" %>
	<%= f.label :amount %>
	<%= f.text_field :amount, :value=>(number_with_precision(@budget.amount, precision: 2)), class: "center-text-field" %>
	<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>