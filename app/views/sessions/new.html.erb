<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<div class="sign-in-button-div">
				<p class="sign-in-button">
					<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
				</p>
			</div>
		<% end %>

		<div>
			<p class="new-user">
				<b>Not a member?</b></br>
				Getting started is easy: 
				<%= link_to "Sign up!", signup_path, class: "btn btn-large btn-success" %>
			</p>
		</div>
	</div>
</div>