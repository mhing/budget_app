<% provide(:title, "Edit User") %>
<!--<%= render 'layouts/budget_header' %>-->
<h3 class="center">Account Settings</h3>
<div class="row">
	<div class="span6">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirm Password" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
	<div class="span6 delete-user-container">
		<div class="center row">
			<div><h4><b>Delete Account</b></h4></div>
			<div class="delete-warning">Your account data will be deleted.</div>
			<%= button_to "Delete My Account", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
		</div>
	</div>
</div>