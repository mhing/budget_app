<% provide(:title, "Edit User") %>
<!--<%= render 'layouts/budget_header' %>-->

<h3 class="center">Account Settings</h3>
<div class="row">
	<div class="span8">
		<div class="row">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>
				<div class="span4 edit-user-container">
					<div class="center row">
						<div><h4><b>Change Email</b></h4></div>
		 				<%= f.label :name %>
						<%= f.text_field :name, class: "edit-field" %>
						
						<%= f.label :email %>
						<%= f.text_field :email, class: "edit-field" %>

						<%= f.submit "Save Email", class: "btn btn-warning" %>	
					</div>
				</div>
				<div class="span4 edit-user-container">
					 <div class="center row">
						<div><h4><b>Change Password</b></h4></div>
						<%= f.label :password, "New Password" %>
						<%= f.password_field :password, class: "edit-field" %>

						<%= f.label :password_confirmation, "Confirm New Password" %>
						<%= f.password_field :password_confirmation, class: "edit-field" %>

						<%= f.submit "Save Password", class: "btn btn-warning" %>
					</div> 
				</div>
			<% end %>
		</div>
	</div>
	<div class="span4 delete-user-container">
		<div class="center row">
			<div><h4><b>Delete Account</b></h4></div>
			<div class="delete-warning">Your account data will be deleted.</div>
			<%= button_to "Delete My Account", @user, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
		</div> 
	</div>
</div>